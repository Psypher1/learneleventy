<h1 class="text-4xl font-bold mb-8">Blog Home</h1>

<ul class='space-y-4'>
    {% for post in collections.post %}
        <li class='shadow-lg p-4 ' >
            <a class="text-lg block hover:text-sky-400 font-semibold text-gray-700" href="{{ post.url }}">{{ post.data.title }}</a>
            <small class="text-sm text-gray-500">{{post.date | postDate}}</small>
        </li>
    {% endfor %}
</ul>
